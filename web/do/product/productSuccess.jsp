<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@taglib prefix="s" uri="/struts-tags"%>
<html>
	<head>
		<style type="text/css">
			.hzx-btn1{
				background-image: url(../../image/hzx/hzx.png);
				background-position: 0px -47px;
				display: block;
				font-size: 14px;
				height: 32px;
				margin-top: 22px;
				padding: 13px 0px 0px 60px;
				width: 129px;
			}	
			.hzx-btn1 b{
				background-image: url(../../image/hzx/hzx.png);
				background-position: -112px 0px;
				height: 17px;
				width: 19px;
				cursor: pointer;
				display: inline;
				float: left;
				margin: 3px 0px 0px -25px;
				overflow: hidden;
			}
			
			.hzx-btn1:link{
				color: #B75200;
				text-decoration: none;
			}
			.hzx-btn1:visited{
				color: #B75200;
				text-decoration: none;
			}
			.hzx-btn1:hover{
				color: red;
				text-decoration: none;
			}
			
			
			
			.hzx-btn2{
				background-image: url(../../image/hzx/hzx.png);
				background-position: 0px -47px;
				display: block;
				font-size: 14px;
				height: 32px;
				margin-top: 22px;
				padding: 13px 0px 0px 60px;
				width: 129px;
			}	
			.hzx-btn2 b{
				background-image: url(../../image/hzx/hzx.png);
				background-position: -96px 0px;
				height: 15px;
				width: 16px;
				cursor: pointer;
				display: inline;
				float: left;
				margin: 3px 0px 0px -25px;
				overflow: hidden;
			}
			
			.hzx-btn2:link{
				color: #B75200;
				text-decoration: none;
			}
			.hzx-btn2:visited{
				color: #B75200;
				text-decoration: none;
			}
			.hzx-btn2:hover{
				color: red;
				text-decoration: none;
			}
			.align-center{  
    			margin:0 auto;      /* 居中 这个是必须的，，其它的属性非必须 */  
    			width:500px;        /* 给个宽度 顶到浏览器的两边就看不出居中效果了 */  
			}  
			
		</style>
	</head>
	<body>
		<div class="align-center">
			<table width="500" height="100">
				<thead>
					<tr>
						<td colspan="2">
							<div style="color: red;font-size: 25px; text-align: center;">
							<s:property value="#request.tip"/>
							</div>
						</td>
					</tr>
				</thead>
				<tr>
					<td>			
					<a class="hzx-btn1" href="${pageContext.request.contextPath}/do/product/toCreateProductSupply">
					<b></b>
					<strong>发布供应信息</strong>
					</a>	
					</td>
					<td>
					<a class="hzx-btn2" href="${pageContext.request.contextPath}/do/product/toProductSupplyListOn">
					<b></b>
					<strong>管理供应信息</strong>
					</a>
					</td>
				</tr>
				<tr>
					<td>
					<a class="hzx-btn1" href="${pageContext.request.contextPath}/do/purchase/toCreateProductPurchase">
					<b></b>
					<strong>发布求购信息</strong>
					</a>
					</td>
					<td>
					<a class="hzx-btn2" href="${pageContext.request.contextPath}/do/purchase/toProductPurchaseListOn">
					<b></b>
					<strong>管理求购信息</strong>
					</a>
					</td>
				</tr>
			</table>
		</div>
	</body>
</html>